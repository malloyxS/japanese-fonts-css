{
  "name": "japanese-fonts-css",
  "version": "0.0.1",
  "description": "The CSS configurations for Japanese device/web fonts",
  "author": "Kairi",
  "license": "MIT",
  "main": "dist/japanese-fonts.css",
  "style": "dist/japanese-fonts.css",
  "scripts": {
    "build": "postcss -c postcss.config.js",
    "pretest": "npm run build",
    "test": "stylelint dist/japanese-fonts.css",
    "serve": "browser-sync start -s 'dist' -f 'dist/*' --open external",
    "prewatch": "npm run build",
    "watch": "watch 'npm run build' src & npm run serve"
  },
  "keywords": [
    "css",
    "font",
    "typography",
    "Japan",
    "Japanese"
  ],
  "devDependencies": {
    "browser-sync": "^2.12.3",
    "cssnano": "^3.5.2",
    "postcss-cli": "^2.5.2",
    "postcss-custom-properties": "^5.0.1",
    "postcss-import": "^8.1.0",
    "postcss-import-url": "^1.0.0",
    "postcss-reporter": "^1.3.3",
    "stylelint": "^6.1.1",
    "stylelint-config-standard": "^6.0.0",
    "watch": "^0.17.1"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
